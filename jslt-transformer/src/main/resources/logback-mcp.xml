<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- File appender for MCP server - NO CONSOLE OUTPUT -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/jslt-transformer-mcp.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/jslt-transformer-mcp.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Logger for our application packages - FILE ONLY -->
    <logger name="com.mxai.jslt" level="INFO" additivity="false">
        <appender-ref ref="FILE" />
    </logger>
    
    <!-- Root logger - FILE ONLY -->
    <root level="WARN">
        <appender-ref ref="FILE" />
    </root>
    
</configuration>
